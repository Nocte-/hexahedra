{
"name": [{"en": "Hexahedra default game"}],
"description": [{"en": "The default sandbox game, with infinite terrain, building, and crafting." }],
"url": "http://hexahedra.net/",
"color": "#601010",
"mode": "singleplayer",

"settings" : [
    {
        "variable": "height_range",
        "type": "integer",
        "ui-hint": "logarithmic",
        "min": 0,
        "max": 10000,
        "default": 1000,
        "label": 
        [
            {"en": "Height range"},
            {"nl": "Hoogteverschil"}
        ],
        "description": 
        [
            {"en": "The maximum height of the mountain tops." },
            {"nl": "De maximum hoogte van de bergtoppen." }
        ]
    }
],

"functions" : [
    {
        "name": "heightmap",
        "hndl": "shift(40,5):distance:div(50):sin:mul(30)"
    }
],

"terrain": [
    { "module" : "heightmap_terrain", "hndl": "@heightmap" },
    { "module" : "caves" },
    { "module" : "soil", 
        "hndl" : "scale(20):checkerboard:add(1):div(2)",
        "material" : [ [ "grass", "dirt" ],
                       [ "sand" ]
                     ]},
    { "module" : "objects",
        "hndl" : "0.05:mul(scale(200):simplex)",
        "sprites" : [ "/usr/local/share/hexahedra/games/defaultgame/mc_tree.hbs.txt" ]
    }
],

"light": [
    { "module": "ambient_occlusion" },
    { "module": "sun" }
]

}

